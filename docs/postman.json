								"devices"
							]
						}
					},
					"response": []
				},
				{
					"name": "Criar Subscrição no Orion",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "fiware-service",
								"value": "tcc_service"
							},
							{
								"key": "fiware-servicepath",
								"value": "/test"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"description\": \"Notifica QuantumLeap sobre mudancas nos sensores\",\n    \"subject\": {\n        \"entities\": [\n            {\n                \"idPattern\": \".*\",\n                \"type\": \"Sensor\"\n            }\n        ],\n        \"condition\": {\n            \"attrs\": [\"temperature\", \"humidity\", \"pm25\"]\n        }\n    },\n    \"notification\": {\n        \"http\": {\n            \"url\": \"http://quantumleap:8668/v2/notify\"\n        }\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:1026/v2/subscriptions",
							"protocol": "http",
							"host": [
