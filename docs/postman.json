				{
					"name": "Registrar Dispositivo Virtual",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "fiware-service",
								"value": "tcc_service"
							},
							{
								"key": "fiware-servicepath",
								"value": "/test"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"devices\": [\n        {\n            \"device_id\": \"sensor001\",\n            \"entity_name\": \"urn:ngsi-ld:Sensor:001\",\n            \"entity_type\": \"Sensor\",\n            \"attributes\": [\n                {\"object_id\": \"t\", \"name\": \"temperature\", \"type\": \"Number\"},\n                {\"object_id\": \"h\", \"name\": \"humidity\", \"type\": \"Number\"},\n                {\"object_id\": \"p25\", \"name\": \"pm25\", \"type\": \"Number\"}\n            ]\n        }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:4041/iot/devices",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "4041",
							"path": [
