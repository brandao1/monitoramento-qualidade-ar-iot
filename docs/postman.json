							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"services\": [\n        {\n            \"apikey\": \"tccapikey\",\n            \"cbroker\": \"http://orion:1026\",\n            \"entity_type\": \"Sensor\",\n            \"resource\": \"/iot/json\"\n        }\n    ]\n}",
